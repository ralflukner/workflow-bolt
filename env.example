# LuknerLumina Workflow Bolt Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
VITE_APP_ENV=development

# Auth0 Configuration
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_AUDIENCE=https://api.luknerlumina.com
VITE_AUTH0_REDIRECT_URI=http://localhost:5173
VITE_AUTH0_LOGOUT_URI=http://localhost:5173

# Redis Configuration (Memorystore)
VITE_REDIS_API_URL=http://localhost:3000/api/redis
VITE_REDIS_SSE_URL=http://localhost:3001/events
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=false

# PostgreSQL Configuration (Cloud SQL)
VITE_POSTGRES_API_URL=http://localhost:3000/api/patients
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DATABASE=luknerlumina

# Tebra API Configuration
VITE_TEBRA_PRACTICE_ID=your-practice-id
VITE_TEBRA_CLIENT_ID=your-tebra-client-id
VITE_TEBRA_CLIENT_SECRET=your-tebra-client-secret
TEBRA_PHP_API_URL=https://tebra-api.luknerlumina.com
TEBRA_INTERNAL_API_KEY=your-internal-api-key

# Google Cloud Configuration
GCP_PROJECT_ID=luknerlumina-firebase
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Worker Configuration
WORKER_CONCURRENCY=5
REQUEST_TIMEOUT=30000
HEALTH_CHECK_PORT=8080

# Vikunja Configuration
VIKUNJA_API_URL=http://localhost:3456/api/v1
VIKUNJA_API_TOKEN=tk_556fc1cf49295b3c8637506e57877c21f863ec16

# Feature Flags
VITE_ENABLE_REDIS=true
VITE_ENABLE_POSTGRES=true
VITE_ENABLE_FIREBASE=false

# Security
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Development
VITE_DEBUG_MODE=false
VITE_MOCK_DATA=false

